CC := gcc
SRC := ${wildcard *.c}
OBJ := ${SRC:.c=.o}
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY : all clean oclean fclean

all: m.h
	${CC} ${OBJ} -o ${NAME}

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean
	@${MAKE} --no-print-directory all -f 4-Makefile
